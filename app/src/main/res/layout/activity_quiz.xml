<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <include
        layout="@layout/appbar_layout"
        android:id="@+id/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question"
                android:id="@+id/question"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/50"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:id="@+id/txtNumber"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Consecutive members of an alkane homologous series differ by "
                android:textSize="17sp"
                android:layout_below="@id/question"
                android:id="@+id/txtQuestion"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="A. a metal "
                android:textSize="16sp"
                android:layout_below="@id/txtQuestion"
                android:id="@+id/txtA"
                android:padding="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background_shape"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@drawable/selector_btn"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/txtB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtA"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/background_shape"
                android:fontFamily="@font/roboto_regular"
                android:padding="8dp"
                android:text="B. an alkaline earth metal "
                android:layout_marginEnd="20dp"
                android:textColor="@drawable/selector_btn"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C. an s-block element"
                android:layout_marginEnd="20dp"

                android:background="@drawable/background_shape"
                android:textSize="16sp"

                android:layout_below="@id/txtB"
                android:padding="8dp"
                android:id="@+id/txtC"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@drawable/selector_btn"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D. a p-block element "
                android:padding="8dp"
                android:background="@drawable/background_shape"
                android:textSize="16sp"
                android:layout_below="@id/txtC"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="60dp"

                android:id="@+id/txtD"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@drawable/selector_btn"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                />

            <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Next"
                android:layout_below="@id/txtD"

            android:textAlignment="center"
                android:id="@+id/btnNext"
            android:layout_marginEnd="20dp"
            android:textColor="@drawable/selector_btn"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:background="@drawable/background_positive_button"

            android:layout_marginBottom="50dp"
            android:layout_alignParentEnd="true"
            />



            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="  End"
                android:layout_below="@id/txtD"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:id="@+id/btnEnd"
                android:textColor="@drawable/selector_btn"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:visibility="gone"
                android:background="@drawable/background_negative_button"
                android:layout_alignParentStart="true"
                />

        </RelativeLayout>
    </ScrollView>








</RelativeLayout>